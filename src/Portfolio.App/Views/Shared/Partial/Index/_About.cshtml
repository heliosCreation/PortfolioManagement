@model AboutViewModel
@{
    var about = Model.AboutModel;
    if (about.CoverUrl == null || String.IsNullOrEmpty(about.CoverUrl))
    {
        about.CoverUrl = "https://freesvg.org/img/abstract-user-flat-1.png";
    }
    var skills = Model.SkillListModel;
}
<section class="about-section section" id="about">
    <div class="container">
        <div class="row">
            <div class="section-title">
                <h2 data-heading="main info">About me</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="about-img">
                <div class="img-box inner-shadow">
                    <img class="outer-shadow" src="@about.CoverUrl" alt="profile-picture" />
                </div>


                <!-- Social links start-->
                <div class="social-links">
                    @{
                        if (about.ShowLinkedinUrl)
                        {
                            <a href="@about.LinkedinUrl" class="outer-shadow hover-in-shadow">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        }
                        if (about.ShowGithubUrl)
                        {

                            <a href="@about.GithubUrl" class="outer-shadow hover-in-shadow">
                                <i class="fab fa-github"></i>
                            </a>
                        }
                    }

                </div>
                <!--Social links end-->

            </div>

            <div class="about-info">
                <p>
                    <span>@about.BoldText</span>
                    @about.MainText
                </p>
                <p>@about.SideText</p>

                <a href="cv.pdf" class=" btn-1 outer-shadow hover-in-shadow">Download CV</a>
                <a href="#contact" class="link-item btn-1 outer-shadow hover-in-shadow">Hire me</a>
            </div>
        </div>

        <!--About tabs start-->
        <div class="row justify-content-center">
            <div class="about-tabs">
                <span class="tab-item outer-shadow active" data-target=".skills">Skills <i class="fas fa-fire"></i> </span>
                <span class="tab-item" data-target=".education">Education <i class="fas fa-graduation-cap"></i> </span>
            </div>
        </div>
        <!--About tabs end-->
        <!--Skill content start-->
        <div class="row">
            <div class="skills tab-content active">
                <div class="row">
                    <!--Skill items start-->
                    @foreach (var skill in skills)
                    {
                        <div class="skill-item">
                            <p>@skill.Name</p>
                            <div class="progress-container inner-shadow">
                                <div class="progress-filler" style="width:calc(@skill.Level% - 14px)">
                                    <span>@skill.Level %</span>
                                </div>
                            </div>
                        </div>
                    }
                    <!--Skill items end-->
                </div>
            </div>
        </div>
        <!--Skill content end-->
        <!--Experience timeline content start-->

        <!--Experience timeline content ends-->
        <!--Education Timeline content start-->
        <div class="row">
            <div class="education tab-content">
                <div class="row">
                    <div class="timeline">
                        <div class="row">
                            @foreach (var study in Model.StudyListModel)
                            {
                                <!-- timeline item start-->
                                <div class="timeline-item">
                                    <div class="timeline-item-inner outer-shadow">
                                        <i class="fas fa-graduation-cap"></i>
                                        <span>@study.From.ToString("dd/MM/yyyy") - @study.To.ToString("dd/MM/yyyy")</span>
                                        <h3>@study.Diploma</h3>
                                        <h4>@study.SchoolName</h4>
                                        @*<p>
                                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et
                                                dolore magna aliqua.
                                            </p>*@
                                    </div>
                                </div>
                                <!--timeline item end-->
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Education timeline content ends-->
    </div>
</section>